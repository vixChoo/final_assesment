<div class="container">

<!-- For page header -->
    <div class="row">
        <div class="col-md-12 text-center m-2">
            <div class="fb-page text-center" 
                data-href="https://www.facebook.com/BBD497/"
                data-width="580" >
            </div>
    </div>
</div>
     

<br>


<!-- job lists -->
    <div class="row">
        <div class="col-md-8">
            <div class="text-muted">
              Job List
            </div>

         <% @jobs.each do |job| %>
        <div class="card m-1 p-3 mb-3 shadow">
        <span><a href="#"><strong><%= job.name %></strong></a></span>
       
                <div class="card-title">
                    <small class="text-muted pull-right">Salary :<%= job.price %></small>
                </div>
                <div class="">
                    <p class="card-text">
                        <p class="text-muted "> <%= job.location %></p>
                            <br>
                        <%= "#{job.description} "%>
                    </p>
                </div>
            </div>
           <% end %>
        </div>
                     


<!-- timeline facebook -->
         <div class="col-md-4">
            <div class="fb-page" data-href="https://www.facebook.com/BBD497/" data-tabs="timeline" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://www.facebook.com/BBD497/" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/BBD497/">百宝  .  袋</a></blockquote></div>
        </div>

    </div>
</div>


                
